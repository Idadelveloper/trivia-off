{
  "name": "trivia-off",
  "private": true,
  "version": "0.0.0",
  "description": "Trivia Off - Kahoot but Offline",
  "author": "Ida Delphine <idadelm@gmail.com>",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && npm run copy:public && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "copy:public": "mkdir -p dist-electron/public && cp -r src/electron/public/* dist-electron/public/",
    "dist:mac": "npm run transpile:electron && npm run copy:public && npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run transpile:electron && npm run copy:public && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && npm run copy:public && npm run build && electron-builder --linux --x64",
    "postinstall": "npx @electron/rebuild --only better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "express": "^4.21.2",
    "os-utils": "^0.0.14",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^3.1.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.25.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
